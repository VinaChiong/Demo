<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_standard"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Standard" />

        <Button
            android:id="@+id/btn_standard_new_task"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Standard New tAsk" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_single_top"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="SingleTop" />

        <Button
            android:id="@+id/btn_single_top_new_task"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="SingleTop new Task" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_single_task"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="SingleTask" />

        <Button
            android:id="@+id/btn_single_task_new_task"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="SingleTask new Task" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_single_instance"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="SingleInstance" />

        <Button
            android:id="@+id/btn_single_instance_new_task"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="SingleInstance New Task" />
    </LinearLayout>

    <TextView
        android:id="@+id/task_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" />

</LinearLayout>